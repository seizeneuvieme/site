{% extends 'base.html.twig' %}

{% block title %}Réinitialiser mon mot de passe - Le Réhausseur{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('reset') }}
{% endblock %}

{% block body %}
    {% include './partials/header.html.twig' %}

    <section class="pt-0">
        <div class="container">
            <div class="row justify-content-center pt-6">
                <div class="col-lg-4 col-md-6">
                    <div class="text-center mb-4">
                        <h1 class="mb-2">Réinitialiser mon <span style="color: #ff2e3d">mot de passe</span></h1>
                    </div>
                    <div class="text-center mb-4">
                        {% if error is defined %}
                            <div class="alert alert-primary" role="alert">
                                Formulaire invalide. <br/>En cas de problème, <a href="mailto:contact@lerehausseur.fr" alt="Contacter Le Réhausseur">contacte-nous</a> :)
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="row justify-content-center pt-2">
                        <div class="col-xl-4 col-lg-5 col-md-6">
                            <form action="{{ path('app_reset_password') }}" method="POST" class="form">
                                <div class="form-group">
                                    <div class="form-group">
                                        <input name="password" id="password" type="password" class="reset form-control" placeholder="Ton nouveau mot de passe">
                                        <small id="password-control-label" class="text-primary" style="display:none;">Le mot de passe doit faire au moins 8 caractères</small>
                                    </div>
                                    <div class="form-group">
                                        <input name="confirm-password" id="confirm-password" type="password" class="reset form-control" placeholder="Confirme ton mon de passe">
                                        <small id="confirm-password-control-label" class="text-primary" style="display:none;">Le mot de passe doit être identique</small>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button id="btn-reset-form" class="btn-block btn btn-primary text-white" type="button">Réinitialiser mon mot de passe</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% include './partials/footer.html.twig' with {'background':'bg-primary-alt', 'hasDivider': true} %}
{% endblock %}