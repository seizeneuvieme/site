                            <form action="{{ path('app_sign_in') }}" method="POST" class="form">
                                <div class="form-group">
                                    <input id="email" type="email" name="_username" placeholder="Ton adresse email" class="form-control sign-in" value="{{ last_username }}">
                                    <small id="email-control-label" class="text-primary" style="display:none;">Adresse email invalide</small>
                                </div>
                                <div class="form-group">
                                    <input id="password" type="password" name="_password" placeholder="Mot de passe" class="form-control sign-in">
                                    <small id="password-control-label" class="text-primary" style="display:none;">Le mot de passe doit faire au moins 8 caractÃ¨res</small>
                                    <small>
                                        <a href="{{ path('app_forgot_password_request') }}">J'ai oubliÃ© mon mot de passe</a>
                                    </small>
                                </div>
                                <div class="form-group">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <input type="hidden" name="_target_path" value="/mon-compte"/>
                                    <button id="sign-in-btn" class="btn-block btn btn-primary text-white sign-in-btn" type="button">Connexion</button>
                                </div>
                                <hr>
                                <div class="text-center text-small text-muted">
                                    <span>
                                        Toujours pas de compte ? ðŸ‘‰ <a href="{{ path('app_sign_up') }}">Inscris toi</a>
